@inherits BunitTestContext
@inject IHttpClientFactory ClientFactory

These tests are written entirely in razor and C# syntax.

Learn more at https://bunit.dev/docs/getting-started/writing-tests.html#creating-basic-tests-in-razor-files

@code {
    [Test]
	public void CounterStartsAtZero()
	{
		// Arrange
		var cut = Render(@<Counter />);

		// Assert that content of the paragraph shows counter at zero
		cut.Find("p").MarkupMatches(@<p>Current count: 0</p>);
	}
    [Test]
	public void ClickingButtonIncrementsCounter()
	{
		// Arrange
		var cut = Render(@<Counter />);

		// Act - click button to increment counter
		cut.Find("button").Click();

		// Assert that the counter was incremented
		cut.Find("p").MarkupMatches(@<p>Current count: 1</p>);
	}
	[Test]
	public void HeaderRendersCorrectly()
	{
		// Arrange
		Services.AddHttpClient();
		var cut = Render(@<SentimentHome />);

		//Assert that the content of the header is 'Sentiment Analysis'
		cut.Find("h1").MarkupMatches(@<h1>Sentiment Analysis</h1>);
	}
}
